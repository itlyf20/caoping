.user{
  width: 100%;
  height: 200px;
  background-color: green;
  display: flex;
  flex-direction: column;
}
.user image{
  width: 50px;
  height: 50px;
  border-radius: 2em;
  margin-left: 42%;
  margin-top: 15%;
}
.user text{
  margin-left: 42%;
  margin-top: 3%;
}
.board{
  display: flex;
  flex-direction: column;
  margin-left: 13px;
}
.board_item{
  cursor: pointer;
  display: flex;
  flex: 1;
  margin-top:15rpx;
  padding: 16rpx;
  border-bottom: 1px solid gray;
}
.board_item image{
  width: 23px;
  height: 23px;
  margin-top: 3px;
}
.board_item text{
  flex: 1;
  margin-top: 3px;
  margin-left: 5px;
}
